<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.fielgm2.musicschoolapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enrol For Music Lessons!"
        android:id="@+id/selectInstrumentHeading"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RadioBtnHeading"
        android:textSize="@dimen/textSize"
        android:id="@+id/rbtnHeading"
        android:layout_alignTop="@+id/rgInstruments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <RadioGroup
        android:layout_width="214dp"
        android:layout_height="190dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/rgInstruments"
        android:layout_below="@+id/selectInstrumentHeading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accordian"
            android:id="@+id/rbnAccordian"
            android:layout_below="@+id/selectInstrumentHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basson"
            android:id="@+id/rbnBasson"
            android:layout_below="@+id/radioButton"
            android:layout_alignRight="@+id/radioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cello"
            android:id="@+id/rbnCello"
            android:layout_below="@+id/radioButton2"
            android:layout_alignLeft="@+id/radioButton2" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SpinnerHeading"
        android:textSize="@dimen/textSize"
        android:id="@+id/spinnerHeading"
        android:layout_below="@+id/rgInstruments"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monthSpinner"
        android:layout_below="@+id/rgInstruments"
        android:layout_alignLeft="@+id/rgInstruments"
        android:layout_alignStart="@+id/rgInstruments"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enrol In Course"
        android:id="@+id/enrol"
        android:layout_below="@+id/monthSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/enrolmentConfirm"
        android:layout_below="@+id/enrol"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp" />

</RelativeLayout>
